<?xml version="1.0" encoding="utf-8"?>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Authors>phasTrak</Authors>
        <CodeAnalysisRuleSet>$(SolutionDir)Strict.ruleset</CodeAnalysisRuleSet>
        <Company />
        <Copyright>phasTrak</Copyright>
        <Description>Plugin for resharper, for converting code to async.</Description>
        <IsPackable>true</IsPackable>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <PackageId>AsyncApostle.Rider</PackageId>
        <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/phasTrak/AsyncApostle</PackageProjectUrl>
        <PackageTags>async</PackageTags>
        <Product />
        <RootNamespace>AsyncApostle</RootNamespace>
        <TargetFramework>net461</TargetFramework>
        <Title>AsyncApostle</Title>
        <Version>1.0.0.0</Version>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
        <DefineConstants>TRACE;DEBUG;NETFRAMEWORK;NET461;RIDER</DefineConstants>
        <OutputPath>bin\Rider\Debug</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
        <DefineConstants>TRACE;RELEASE;NETFRAMEWORK;NET461;RIDER</DefineConstants>
        <OutputPath>bin\Rider\Release</OutputPath>
    </PropertyGroup>

    <ItemGroup>
        <Compile Remove="Settings\ConfigureAwaitOptions\AsyncApostleConfigureAwaitPage.cs" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="AsyncApostle.Rider.nuspec" />
        <None Remove="packages.AsyncApostle.config" />
        <None Remove="packages.AsyncApostle.Rider.config" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Rider.SDK" Version="2021.1.0" PrivateAssets="All" />
        <PackageReference Include="Wave" Version="[211]" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="tmp\**" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Remove="tmp\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="tmp\**" />
    </ItemGroup>

    <ItemGroup>
        <Compile Remove="packages\**" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Remove="packages\**" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="packages\**" />
    </ItemGroup>

</Project>